<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <!-- Text -->
    <style name="textAppTitle">
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_high_blue</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="textGeneral">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="textGeneral12" parent="textGeneral">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="textGeneral14" parent="textGeneral">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textTitle15" parent="textGeneral">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextInputHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="textGeneralNoSpacing">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>


    <!-- Log in -->
    <style name="LoginTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">100dp</item>
    </style>


    <!-- others -->
    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="saveAndEditButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="hintIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">@color/black_3f3a3a</item>
    </style>


</resources>
