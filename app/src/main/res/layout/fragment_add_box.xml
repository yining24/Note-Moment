<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.angela.notemoment.addbox.AddBoxViewModel" />
        <import type="com.angela.notemoment.LoadApiStatus"/>
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#EEEEEE"
            app:imageUrlAddBox="@{viewModel.box.image}"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_create_box"
            app:srcCompat="@drawable/placeholder_logo_add_gray" />

<!--        <ImageButton-->
<!--            android:id="@+id/upload_button"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:backgroundTint="@color/transparent"-->
<!--            android:scaleType="centerCrop"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/upload_image"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/upload_image"-->
<!--            app:srcCompat="@drawable/icon_photo_gray" />-->

<!--        <ImageButton-->
<!--            android:id="@+id/camera_button"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:backgroundTint="@color/transparent"-->
<!--            android:scaleType="centerCrop"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/upload_image"-->
<!--            app:layout_constraintEnd_toStartOf="@+id/upload_button"-->
<!--            app:srcCompat="@drawable/icon_camera_gray" />-->


        <EditText
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/icon_folder_32"
            android:drawablePadding="20dp"
            android:hint="Title of the box"
            android:text="@={viewModel.box.title}"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="20"
            android:background="@color/transparent"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upload_image" />

        <View
            android:id="@+id/view_text_separation"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_999999"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

            <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:ccp_textSize="14dp"
                    app:ccp_textGravity="CENTER"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_defaultNameCode="TW"
                    app:ccp_rememberLastSelection="true"
                    app:ccp_showFullName="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                    app:ccp_countryPreference="TW,US,JP"
                    app:ccp_defaultLanguage="ENGLISH"
                    app:ccpDialog_showCloseIcon="true"
                android:visibility="@{viewModel.box.id == null ? View.VISIBLE : View.GONE}"/>

        <View
            android:id="@+id/view_separation"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_999999"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/ccp"
            android:visibility="@{viewModel.box.id == null ? View.VISIBLE : View.GONE}" />


        <Button
            android:id="@+id/button_save"
            style="@style/textGeneral14"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:clickable="@{viewModel.status == LoadApiStatus.LOADING? false : true}"
            android:letterSpacing="0.15"
            android:onClick="@{() -> viewModel.publishBoxResult(viewModel.box, viewModel.photoUrl)}"
            android:text="SAVE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_create_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_create_box" />

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_back_nocircle" />

        <TextView
            android:id="@+id/text_create_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkshire_swash"
            android:letterSpacing="0.15"
            android:text='@{viewModel.box.id == null ? "Create Box" : "Edit Box"}'
            tools:text="Create Box"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_back" />

