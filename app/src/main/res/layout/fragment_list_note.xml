<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.angela.notemoment.listnote.ListNoteViewModel" />
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/list_box_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:imageUrl="@{viewModel.box.image}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/list_button_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/white"
            app:srcCompat="@drawable/icon_back_nocircle"
            android:shadowColor="#ff000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10"/>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5BFFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/list_box_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_box_title"
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@{viewModel.box.title}"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_box_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="date" />

        <TextView
            android:id="@+id/text_note_amount"
            style="@style/textGeneral12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.notesSize}"
            app:layout_constraintBottom_toBottomOf="@+id/list_box_image"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10 notes"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_box_date"
            style="@style/textGeneral12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.displayBoxDate()}"
            app:layout_constraintBottom_toTopOf="@+id/text_note_amount"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            tools:text="2020/01/01" />


<!--        <View-->
<!--            android:id="@+id/view_separation"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@color/gray_cccccc"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/text_box_title"-->
<!--            app:layout_constraintStart_toStartOf="@+id/text_box_title"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/text_box_title" />-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_note_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_box_image"
            app:noteSorted="@{viewModel.noteSorted}"
            tools:listitem="@layout/item_list_note_sorted">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_click_to_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{viewModel.note.size() == 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/list_box_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{() -> viewModel.navigateToAddNote()}">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:tint="#BFFFFFFF"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_add_note"
                app:srcCompat="@drawable/icon_writenote2" />

            <TextView
                android:id="@+id/text_add_note"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_text_shadow"
                android:fontFamily="@font/noto_sans"
                android:text="點擊新增筆記"
                android:textAlignment="center"
                android:textColor="#B1B1B1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_box_title"
            app:layout_constraintStart_toEndOf="@+id/text_box_title"
            app:layout_constraintTop_toTopOf="@+id/text_box_title"
            app:srcCompat="@drawable/icon_write_pencil" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>