<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.angela.notemoment.listnote.ListNoteViewModel" />
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_click_to_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/text_box_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
<!--            android:onClick="@{() -> viewModel.navigateToAddBox()}"-->
<!--            android:visibility="@{viewModel.boxes.size() == 0 ? View.VISIBLE : View.GONE}"-->


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="80dp"
                android:tint="#BFFFFFFF"
                android:visibility="@{viewModel.note.size() == 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_drawer_icon512" />

            <TextView
                android:id="@+id/text_add_drawer"
                style="@style/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text_shadow"
                android:fontFamily="@font/noto_sans"
                android:text="點擊新增筆記"
                android:textAlignment="center"
                android:textColor="#B1B1B1"
                android:textStyle="bold"
                android:visibility="@{viewModel.note.size() == 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/list_box_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.box.image}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#5BFFFFFF"
            app:layout_constraintTop_toTopOf="@+id/text_box_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/list_box_image"
            />


        <TextView
            android:id="@+id/text_box_title"
            style="@style/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@{viewModel.box.title}"
            android:textAllCaps="true"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_box_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="date" />

        <TextView
            android:id="@+id/text_note_amount"
            style="@style/textGeneral12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.notesSize}"
            app:layout_constraintBottom_toTopOf="@+id/view_click_to_add"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10 notes" />

        <TextView
            android:id="@+id/text_box_date"
            style="@style/textGeneral12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@{viewModel.displayBoxDate()}"
            app:layout_constraintBottom_toTopOf="@+id/text_note_amount"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2020/01/01" />


        <View
            android:id="@+id/view_separation"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_cccccc"
            app:layout_constraintEnd_toEndOf="@+id/text_box_title"
            app:layout_constraintStart_toStartOf="@+id/text_box_title"
            app:layout_constraintTop_toBottomOf="@+id/text_box_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_note_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_separation"
            app:noteSorted="@{viewModel.noteSorted}"
            tools:listitem="@layout/item_list_note_sorted">

        </androidx.recyclerview.widget.RecyclerView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>