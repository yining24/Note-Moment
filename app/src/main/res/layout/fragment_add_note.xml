<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.angela.notemoment.addnote.AddNoteViewModel" />
        <import type="com.angela.notemoment.LoadApiStatus"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#EEEEEE"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_create_note"
            app:srcCompat="@drawable/icon_photo_gray" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/upload_button"-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:backgroundTint="@color/transparent"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/upload_image"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/upload_image"-->
        <!--            app:srcCompat="@drawable/icon_photo_gray" />-->

        <!--        <ImageButton-->
        <!--            android:id="@+id/camera_button"-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:backgroundTint="@color/transparent"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/upload_image"-->
        <!--            app:layout_constraintEnd_toStartOf="@+id/upload_button"-->
        <!--            app:srcCompat="@drawable/icon_camera_gray" />-->



        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upload_image" />


        <TextView
            android:id="@+id/select_date"
            style="@style/textGeneral14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/icon_calendar_32"
            android:drawablePadding="20dp"
            android:paddingEnd="20dp"
            android:text="請點選開始日期"
            app:layout_constraintEnd_toStartOf="@+id/select_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment" />

<!--        <View-->
<!--            android:id="@+id/view_date_separation"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginStart="8dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:background="@color/gray_999999"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/select_date"-->
<!--            app:layout_constraintStart_toStartOf="@+id/select_date"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/select_date" />-->

        <TextView
            android:id="@+id/select_time"
            style="@style/textGeneral14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="請點選時間"
            android:drawablePadding="20dp"
            android:paddingEnd="20dp"
            android:drawableStart="@drawable/icon_clock_32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/select_date"
            app:layout_constraintTop_toTopOf="@+id/select_date" />

<!--        <View-->
<!--            android:id="@+id/view_time_separation"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginStart="8dp"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:background="@color/gray_999999"-->
<!--            app:layout_constraintEnd_toEndOf="@+id/select_time"-->
<!--            app:layout_constraintStart_toStartOf="@+id/select_time"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/select_time" />-->


        <EditText
            android:id="@+id/select_tag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/transparent"
            android:drawableStart="@drawable/icon_left_tag32"
            android:drawablePadding="10dp"
            android:hint="Tag : travel"
            android:text="@={viewModel.note.tags}"
            android:textSize="14sp"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintEnd_toEndOf="@+id/place_autocomplete_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_date" />


        <Spinner
            android:id="@+id/select_box"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:entries="@{viewModel.boxList}"
            android:prompt="@string/spinner_select_box"
            android:spinnerMode="dialog"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/place_autocomplete_fragment"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/select_tag" />

        <EditText
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_text_frame"
            android:drawableStart="@drawable/icon_writenote_32"
            android:drawablePadding="10dp"
            android:focusableInTouchMode="true"
            android:hint="Title"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="20"
            android:text="@={viewModel.note.title}"
            android:textSize="14sp"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_box" />

        <View
            android:id="@+id/view_title_separation"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/gray_999999"
            app:layout_constraintEnd_toEndOf="@+id/title_text"
            app:layout_constraintStart_toStartOf="@+id/title_text"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />


        <EditText
            android:id="@+id/write_note"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_text_frame"
            android:gravity="top"
            android:hint="content"
            android:maxLength="500"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:singleLine="false"
            android:text="@={viewModel.content}"
            android:textSize="14sp"
            app:hintTextAppearance="@style/TextInputHint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_save"
            style="@style/textGeneral14"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:clickable="@{viewModel.status == LoadApiStatus.LOADING? false : true}"
            android:letterSpacing="0.15"
            android:onClick="@{() -> viewModel.publishNoteResult(viewModel.note, viewModel.photoUrl, viewModel.selectedBox)}"
            android:text="SAVE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/text_create_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_create_note" />

        <ImageView
            android:id="@+id/note_button_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_back_nocircle" />

        <TextView
            android:id="@+id/text_create_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/berkshire_swash"
            android:letterSpacing="0.15"
            android:text="Create Note"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/note_button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/note_button_back" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/select_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_tag"
            app:srcCompat="@drawable/icon_drawer" />

        <TextView
            android:id="@+id/text_content_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentLength="@{viewModel.content}"
            app:layout_constraintEnd_toEndOf="@+id/write_note"
            app:layout_constraintTop_toBottomOf="@+id/view_title_separation" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>